<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/nested"
    android:background="#e5e5e5"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_height="match_parent"
    tools:context="com.hilmiproject.omdutz.mcafee.Fragment.reward.Hadiah">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/cardviewiklan"
        android:padding="2dp"
        android:layout_margin="2dp"
        card_view:cardCornerRadius="5dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v4.view.ViewPager
                android:id="@+id/iklan"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"></android.support.v4.view.ViewPager>
          <LinearLayout
              android:orientation="horizontal"
              android:layout_below="@+id/iklan"
              android:layout_centerHorizontal="true"
              android:id="@+id/tandaiklan"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"></LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/hadiah"
        android:layout_below="@id/cardviewiklan"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>

</android.support.v4.widget.NestedScrollView>
